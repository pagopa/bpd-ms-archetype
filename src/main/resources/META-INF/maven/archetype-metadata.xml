<!--                            <includes>-->
<!--                                <include>**/*.java</include>-->
<!--                            </includes>-->
<!--                        </fileSet>-->
<!--                    </fileSets>-->
<!--                </module>-->
            </modules>
        </module>
    </modules>
</archetype-descriptor>
