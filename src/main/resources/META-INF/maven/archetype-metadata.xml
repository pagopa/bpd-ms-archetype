<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
        xsi:schemaLocation="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0 http://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
        name="${artifactId}"
        xmlns="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <requiredProperties>
        <requiredProperty key="msNameCamelCase">
            <!--            <defaultValue>TestService</defaultValue>-->
        </requiredProperty>
        <requiredProperty key="msName">
            <!--            <defaultValue>test-service</defaultValue>-->
        </requiredProperty>
        <requiredProperty key="msNameUpperCase">
            <!--            <defaultValue>TEST_SERVICE</defaultValue>-->
        </requiredProperty>
        <requiredProperty key="msPackageName">
            <!--            <defaultValue>test_service</defaultValue>-->
        </requiredProperty>
        <!--        <requiredProperty key="rootArtifactId"/>-->
    </requiredProperties>
    <fileSets>
        <fileSet filtered="false" encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>.gitignore</include>
                <include>.mvn/**</include>
                <include>mvnw</include>
                <include>mvnw.cmd</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>runSonar.bat</include>
            </includes>
        </fileSet>
    </fileSets>
    <modules>
        <module id="${rootArtifactId}-app" dir="app" name="${rootArtifactId}-app">
            <fileSets>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/main/resources</directory>
                    <includes>
                        <include>**/*.yml</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/test/java</directory>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>
        <module id="${rootArtifactId}-core" dir="core" name="${rootArtifactId}-core">
            <fileSets>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/test/java</directory>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>
        <module id="${rootArtifactId}-integration" dir="integration" name="${rootArtifactId}-integration">
            <modules>
                <module id="${rootArtifactId}-integration-jpa" dir="jpa" name="${rootArtifactId}-integration-jpa">
                    <fileSets>
                        <fileSet filtered="true" encoding="UTF-8">
                            <directory>src</directory>
                            <includes>
                                <include>**</include>
                            </includes>
                        </fileSet>
                    </fileSets>
                </module>
                <module id="${rootArtifactId}-integration-rest" dir="rest" name="${rootArtifactId}-integration-rest">
                    <fileSets>
                        <fileSet filtered="true" encoding="UTF-8">
                            <directory>src/main/java</directory>
                            <includes>
                                <include>**/*.java</include>
                            </includes>
                        </fileSet>
                        <fileSet filtered="true" encoding="UTF-8">
                            <directory>src/test/java</directory>
                            <includes>
                                <include>**/*.java</include>
                            </includes>
                        </fileSet>
                        <fileSet filtered="true" encoding="UTF-8">
                            <directory>src/main/resources</directory>
                            <includes>
                                <include>**</include>
                            </includes>
                        </fileSet>
                        <fileSet filtered="true" encoding="UTF-8">
                            <directory>src/test/resources</directory>
                            <includes>
                                <include>**</include>
                            </includes>
                        </fileSet>
                    </fileSets>
                </module>
                <module id="${rootArtifactId}-integration-event" dir="event" name="${rootArtifactId}-integration-event">
                    <fileSets>
                        <fileSet filtered="true" encoding="UTF-8">
                            <directory>src/main/java</directory>
                            <includes>
                                <include>**/*.java</include>
                            </includes>
                        </fileSet>
                        <fileSet filtered="true" encoding="UTF-8">
                            <directory>src/test/java</directory>
                            <includes>
                                <include>**/*.java</include>
                            </includes>
                        </fileSet>
                        <fileSet filtered="true" encoding="UTF-8">
                            <directory>src/main/resources</directory>
                            <includes>
                                <include>**</include>
                            </includes>
                        </fileSet>
                    </fileSets>
                </module>
            </modules>
        </module>
        <module id="${rootArtifactId}-api" dir="api" name="${rootArtifactId}-api">
            <modules>
                <module id="${rootArtifactId}-api-rest" dir="rest" name="${rootArtifactId}-api-rest">
                    <fileSets>
                        <fileSet filtered="true" encoding="UTF-8">
                            <directory>src/main/java</directory>
                            <includes>
                                <include>**/*.java</include>
                            </includes>
                        </fileSet>
                        <fileSet filtered="true" encoding="UTF-8">
                            <directory>src/test/java</directory>
                            <includes>
                                <include>**/*.java</include>
                            </includes>
                        </fileSet>
                    </fileSets>
                </module>
                <!--                <module id="api-listener" dir="listener" name="api-listener">-->
<!--                    <fileSets>-->
<!--                        <fileSet filtered="true" encoding="UTF-8">-->
<!--                            <directory>src/main/java</directory>-->
<!--                            <includes>-->
<!--                                <include>**/*.java</include>-->
<!--                            </includes>-->
<!--                        </fileSet>-->
<!--                        <fileSet filtered="true" encoding="UTF-8">-->
<!--                            <directory>src/main/resources</directory>-->
<!--                            <includes>-->
<!--                                <include>**</include>-->
<!--                            </includes>-->
<!--                        </fileSet>-->
<!--                        <fileSet filtered="true" encoding="UTF-8">-->
